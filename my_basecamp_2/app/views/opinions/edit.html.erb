<div class="row w-50 mx-auto" >
    <h3 class= "text-center">Edit Comment</h3>
</div>
<div class="mx-auto w-50 p-3 row">
    <%= form_with(model: [@project, @discussion, @opinion]) do |f| %>
        <%= f.label :Thread, class: "form-label" %><br>
        <%= f.text_area :details, value: @opinion.details, class: "form-control" %><br>
        <%= f.submit "save", class: "btn btn-primary" %>
    <% end %>
</div>