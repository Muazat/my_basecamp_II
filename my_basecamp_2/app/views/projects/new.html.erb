<div class="row w-50 mx-auto" >
    <h3 class= "text-center">New Project </h3>
</div>
<div class="mx-auto w-50 p-3 row">
  <%= form_for @project do |f| %>
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class:"form-control" %><br>

    <%= f.label :Description, class: "form-label" %>
    <%= f.text_area :description, class:"form-control" %><br>

    <%= f.label :Files, class: "form-label" %>
    <%= f.file_field :files, multiple: true %><br>

    <%= f.label :"Created By", class: "form-label" %>
    <%= f.text_field :created_by, class:"form-control", value:"#{current_user.surname} #{current_user.firstname}", readonly: true%><br>
    <%= f.submit "save", class: "btn btn-primary" %>
  <% end %>
</div>