<div class="row w-50 mx-auto" >
    <h3 class= "text-center">New Project </h3>
</div>
<div class="mx-auto w-50 p-3 row">
  <%= form_for @project do |f| %>
    <%= f.label :tasks, class: "form-label" %>
    <%= f.text_field :title, value: @project.title, class: "form-control" %><br>

    <%= f.label :Description, class: "form-label" %>
    <%= f.text_area :description, value: @project.description, class: "form-control" %><br>

    <%= f.submit "save", class: "btn btn-primary" %>
  <% end %>
</div>