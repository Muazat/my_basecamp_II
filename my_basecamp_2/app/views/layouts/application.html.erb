<!DOCTYPE html>
<html>
  <head>
    <title>MyBasecamp2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <%= javascript_importmap_tags %>
  </head>

  <body style="height:100%">       
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">BASECAMP</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link active"%>
                </li>
                <li class="nav-item">
                  <%= link_to "Projects", projects_path, method: :get, class: "nav-link active"%>
                </li>
                <li class="nav-item">
                  <%= link_to "Add Project", new_project_path, method: :get, class: "nav-link active"%>
                </li>
                <% if current_user.status == "administrator" %>
                  <li class="nav-item">
                    <%= link_to "Users", allUser_path, method: :get, class: "nav-link active"%>
                  </li>
                <% end %>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, method: :get, class: "nav-link active"%>
              </li>
              <li class="nav-item">
                <%= link_to "Register", new_user_registration_path, method: :get, class: "nav-link active"%>
              </li>
              
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container ml-0">
        <div class="row w-50 mx-auto" >
          <h3 class= "text-center">BASECAMP APP </h3>
          <h6 class= "text-center">A project management web application</h6>
        </div>
    </div>
    <div>
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
    </div>
    <%= yield %>
    
  </body>
</html>
